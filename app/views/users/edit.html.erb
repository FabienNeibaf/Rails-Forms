<ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<%= form_for @user do |f| %>
  <%= f.label :email %>
  <%= f.email_field :email, placeholder: 'example@example.com' %>
  <%= f.label :username, 'Your username here' %>
  <%= f.text_field :username %>
  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Submit" %>
<% end %>